@page
@model Bulky.Razor.Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row">
        <div class=" col-6 pt-4 pb-3">
            <h2 text-primary> Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CategoryList)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn btn-group" role="group">
                            <a asp-page="/categories/edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="/categories/delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>

                    </td>
                </tr>

            }
        </tbody>
    </table>

</div>